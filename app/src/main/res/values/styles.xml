<resources>
    <style name="Classic" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/classicAccent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Dark" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
    </style>

    <style name="Light" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <declare-styleable name="ProperSeekBarPreference">
        <attr format="integer" name="min"/>
        <attr name="android:max"/>
        <attr name="android:layout"/>
        <attr format="integer" name="seekBarIncrement"/>
        <attr format="boolean" name="adjustable"/>
        <attr format="boolean" name="showSeekBarValue"/>
    </declare-styleable>

</resources>
