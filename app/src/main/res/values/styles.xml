<resources>

    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="viewInflaterClass">androidx.appcompat.app.AppCompatViewInflater</item>
    </style>

    <style name="Classic" parent="@style/BaseTheme">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/classicAccent</item>
        <item name="android:windowBackground">@color/black</item>

        <item name="android:actionModeCloseDrawable">@drawable/ic_clear</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="Dark" parent="@style/BaseTheme">
        <item name="colorPrimary">@color/darkIndigo900</item>
        <item name="colorPrimaryDark">@color/darkIndigo900</item>
        <item name="android:windowBackground">@color/darkIndigo900</item>
        <item name="colorAccent">@color/classicAccent</item>
    </style>

    <style name="Blue" parent="@style/BaseTheme">
        <item name="colorPrimary">@color/blue_a700</item>
        <item name="colorPrimaryDark">@color/blue_a700</item>
        <item name="android:windowBackground">@color/blue_a700</item>
        <item name="colorAccent">@color/classicAccent</item>
    </style>

    <style name="Red" parent="@style/BaseTheme">
        <item name="colorPrimary">@color/red900</item>
        <item name="colorPrimaryDark">@color/red900</item>
        <item name="android:windowBackground">@color/red900</item>
        <item name="colorAccent">@color/classicAccent</item>
    </style>

    <declare-styleable name="ProperSeekBarPreference">
        <attr format="integer" name="min"/>
        <attr name="android:max"/>
        <attr name="android:layout"/>
        <attr format="integer" name="seekBarIncrement"/>
        <attr format="boolean" name="adjustable"/>
        <attr format="boolean" name="showSeekBarValue"/>
        <attr format="string" name="unitOfMeasurement"/>
        <attr format="string" name="dialogTitle"/>
    </declare-styleable>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="SectionCommon">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
    </style>

    <style name="Spinner" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="OverviewTextValue">
        <item name = "android:gravity">center</item>
        <item name = "android:textStyle">bold</item>
        <item name="android:textSize">@dimen/smallerTextSize</item>
    </style>

    <style name="OverviewTextDescription">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
